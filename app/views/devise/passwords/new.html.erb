<div class="text-center bottom-margined">
  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.input :email, autofocus: true, label: false, placeholder: 'Email', wrapper_html: { class: 'field' } %>
    <%= f.button :submit, 'Reset my password', wrapper_html: { class: 'actions' } %>
  <% end %>
</div>
