<div class="container-fluid">
  <div class="row place">
    <div class="place-title">
      <%= place.name %>
    </div>
    <div class="place-teaser">
      <%= image_tag(place.teaser, alt: place.name) %>
    </div>
  </div>
  <% place.slides.each do |slide| %>
    <div class="slide row">
      <div class="slide-text col-md-4 col-lg-3 col-xs-12">
        <span class="glyphicon glyphicon-chevron-down place-arrow" aria-hidden="true"></span>
        <p class="title"><%= slide.title %></p>
        <p class="description"><%= slide.description %></p>
      </div>
      <%= image_tag(slide.photo, alt: 'Slide photo', class: 'col-md-8 col-lg-9 col-xs-12') %>
    </div>
  <% end %>
  <h2 class="bottom-caption">wait, there's more to <%= link_to 'explore!', root_path %></h2>
</div>
